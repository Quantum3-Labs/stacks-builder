# Stacks Builder Backend Configuration (Development)
# Copy this file to .env.dev and fill in your values
# Used by docker-compose.dev.yml (make dev) and local development (make run)

# Server Configuration
PORT=8080
GIN_MODE=debug

# Public URL that Swagger advertises (scheme + host, no trailing slash)
PUBLIC_BACKEND_URL=http://localhost:8080

# Data Directories (Local paths - relative to backend directory)
DATA_DIR=data
CHROMADB_PATH=data/chromadb
CLARITY_SAMPLES_DIR=data/clarity_code_samples
CLARITY_DOCS_DIR=data/clarity_official_docs
DATABASE_PATH=data/clarity_coder.db

# Python Scripts Configuration (Local paths - relative to backend directory)
PYTHON_EXECUTABLE=python3
PYTHON_SCRIPT_PATH=scripts/rag_retriever.py
PYTHON_CLONE_SCRIPT=scripts/clone_repos.py
PYTHON_CLONE_DOCS_SCRIPT=scripts/clone_docs.py
PYTHON_INGEST_SAMPLES_SCRIPT=scripts/ingest_samples.py
PYTHON_INGEST_DOCS_SCRIPT=scripts/ingest_docs.py
PYTHONUNBUFFERED=1
ANONYMIZED_TELEMETRY=False

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here

# Code Generation Provider ("gemini", "openai", or "claude")
CODEGEN_PROVIDER=gemini

# OpenAI Configuration (required if CODEGEN_PROVIDER=openai)
OPENAI_API_KEY=your-openai-api-key-here
# Optional overrides
# OPENAI_MODEL=gpt-4o-mini
# OPENAI_BASE_URL=https://api.openai.com/v1/chat/completions
# OPENAI_SYSTEM_MESSAGE=You are a Clarity expert.

# Claude Configuration (required if CODEGEN_PROVIDER=claude)
CLAUDE_API_KEY=your-claude-api-key-here
# Optional overrides
# CLAUDE_MODEL=claude-3-opus-20240229
# CLAUDE_BASE_URL=https://api.anthropic.com/v1/messages
# CLAUDE_API_VERSION=2023-06-01
# CLAUDE_SYSTEM_MESSAGE=You are a Clarity expert.
